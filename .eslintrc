{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "plugins": ["flowtype", "babel"],
  "rules": {
    "no-param-reassign": ["error", { "props": false }],
    "semi": ["error", "never"],
    "no-underscore-dangle": 0,
    "max-len": [2, 500, 4, { "ignoreUrls": true }]
  }
}
